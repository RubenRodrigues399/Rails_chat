<%= turbo_stream_from dom_id(current_user) %>

<div class="chat-container">
  <div class="chat-header">
    <h1>Bem-vindo ao chat on Rails, <%= current_user.username %>!</h1>

    <div class="logout-wrapper">
<%= button_to "Sair", destroy_user_session_path,
              method: :delete,
              data: { confirm: "Tens a certeza que queres sair?" },
              class: "logout-button" %>
  </div>
  </div>

  <div id="chatbox" class="chat-box">
    <%= render partial: "messages/chatbox", locals: { messages: @messages } %>
  </div>

  <%= render partial: "messages/form", locals: { message: @message } %>
</div>