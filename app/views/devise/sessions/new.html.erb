<div class="login-container">
  <h2 class="login-title">Iniciar sess√£o</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email", class: "form-control" },
                  wrapper_html: { class: "mb-4" } %>

      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password", class: "form-control" },
                  wrapper_html: { class: "mb-4" } %>

      <%= f.input :remember_me, as: :boolean, wrapper_html: { class: "mb-4" } if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Entrar", class: "btn btn-primary" %>
    </div>
  <% end %>

  <div class="login-links">
    <%= render "devise/shared/links" %>
  </div>
</div>
