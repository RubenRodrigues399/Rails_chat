<%= turbo_stream_from "messages" %>

<div class="messages-box" data-controller="chat" data-chat-current-user-id-value="<%= current_user.id %>">
  <div id="messages" class="messages-list">
    <% messages.each do |message| %>
      <%= render partial: "messages/message", 
        locals: { 
          message: message, 
          display_controls: message.user == current_user 
        } %>
    <% end %>
  </div>
</div>

